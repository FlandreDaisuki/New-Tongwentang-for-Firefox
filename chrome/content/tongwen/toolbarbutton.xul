	<toolbarbutton id="tongwen-button2-textzoom-reset" class="toolbarbutton-1 chromeclass-toolbar-additional"
	  tooltiptext="&tongwen-button-textzoom-reset.tooltipText;" 
   	  command="cmd_tongwen_textzoom_reset"/>
	  
	<toolbarbutton id="tongwen-button2-show-filter-dialog" class="toolbarbutton-1 chromeclass-toolbar-additional"
	  tooltiptext="&tongwen-button-addfilter.tooltipText;"
   	  command="cmd_tongwen_addfilter"/>

	<toolbarbutton id="tongwen-button2-add-filter-dialog-trad" class="toolbarbutton-1 chromeclass-toolbar-additional"
	  tooltiptext="&tongwen-button-addfilter-trad.tooltipText;"
   	  command="cmd_tongwen_addfilter_trad"/>

	<toolbarbutton id="tongwen-button2-add-filter-dialog-sim" class="toolbarbutton-1 chromeclass-toolbar-additional"
	  tooltiptext="&tongwen-button-addfilter-sim.tooltipText;"
