<!DOCTYPE window SYSTEM "chrome://tongwen/locale/tongwen.dtd">

	<dialog id="winMain" 
		xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
		xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
		
		title="&tongwen-settings-window.title;" 
		style="min-width: 600px; min-height: 500px;"
		minWidth = "600"
		minHeight = "500"		
		width = "600"
		height = "500"
		onload="init();" 
		ondialogaccept="return accept();" 
		ondialogcancel="ondialog_cancel();"
		persist="screenX screenY height"
		>

	<stringbundleset>
		<stringbundle id="strRes" src="chrome://tongwen/locale/tongwen.properties"/>
	</stringbundleset>	

	<script type="application/x-javascript" src="chrome://tongwen/content/constants.js"/>
	<script type="application/x-javascript" src="chrome://tongwen/content/s2t.js"/>
	<script type="application/x-javascript" src="chrome://tongwen/content/settings/keyCodeMapper.js"/>
	<script type="application/x-javascript" src="chrome://tongwen/content/settings/settings.js"/>
	<script type="application/x-javascript" src="chrome://tongwen/content/settings/settings_filter.js"/>
	<script type="application/x-javascript" src="chrome://tongwen/content/settings/treeView.js"/>	
	<script type="application/x-javascript" src="chrome://tongwen/content/settings/settings_redefine_phrase.js"/>
		
	<!-- TooltipText -->
	<tooltip id="tip-tongwen-chinese-encoding-only" orient="vertical" crop="right">
		<description height="50">&tongwen-settings.autoconvert.chinese-encoding-only.description;</description>
	</tooltip>	
	<tooltip id="tip-tongwen-opposite-charset-only" orient="vertical" crop="right">
		<description height="50">&tongwen-settings.autoconvert.opposite-charset-only.description;</description>
	</tooltip>	
	<tooltip id="tip-tongwen-enable-utf8-convert" orient="vertical" crop="right">
		<description height="50">&tongwen-settings.autoconvert.enable-utf8-convert.description;</description>
	</tooltip>

	<tooltip id="tip-tongwen-convertion-phraseFix" orient="vertical" crop="right">
		<description height="20">&tongwen-settings.convertion.tooltip.description;</description>
	</tooltip>
	
	<tooltip id="tip-tongwen-disableTransInputTextarea" orient="vertical" crop="right">
		<description height="20">&tongwen-settings.disableTransInputTextarea.tooltipText;</description>
	</tooltip>
			
